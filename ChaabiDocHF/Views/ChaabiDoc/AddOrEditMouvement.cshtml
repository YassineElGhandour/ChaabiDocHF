@model ChaabiDocHF.Models.Mouvement

@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEditMouvement", "ChaabiDoc", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.idMvnt)
    @Html.HiddenFor(model => model.idUser)
    @Html.HiddenFor(model => model.idDossier)
    @Html.HiddenFor(model => model.dateRest)
    @Html.HiddenFor(model => model.dateMvnt)

    <div class="form-group">
        <label>Motif</label>
        @Html.DropDownListFor(model => model.idMotif, ViewBag.ListeMotifs as SelectList, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.idMotif, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Numéro Conteneur</label>
        @Html.EditorFor(model => model.numCont, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.numCont)
    </div>
    <div class="form-group">
        <label>Le mouvement est valide</label>
        @Html.CheckBoxFor(model => model.isValid, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Valider" class="btn btn-primary" />
        <input type="reset" value="Réinitialisez" class="btn" />
    </div>
}