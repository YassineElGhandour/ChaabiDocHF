@model ChaabiDocHF.Models.Produit

@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEditProduit", "ChaabiGestion", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.idProduit)
    <div class="form-group">
        <label>Nom Produit</label>
        @Html.EditorFor(model => model.nomProduit, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.nomProduit)
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.EditorFor(model => model.descProduit, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.descProduit)
    </div>

    <div class="form-group">
        <input type="submit" value="Valider" class="btn btn-primary" />
        <input type="reset" value="Réinitialisez" class="btn" />
    </div>
}
