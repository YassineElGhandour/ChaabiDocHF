@model ChaabiDocHF.Models.Armoire

@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEditArmoire", "ChaabiGestion", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.idArmoire)
    <div class="form-group">
        <label>Code Armoire</label>
        @Html.EditorFor(model => model.codeArmoire, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.codeArmoire)
    </div>

    <div class="form-group">
        <input type="submit" value="Valider" class="btn btn-primary" />
        <input type="reset" value="Réinitialisez" class="btn" />
    </div>
}
